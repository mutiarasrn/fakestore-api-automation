{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "product",
  "type": "object",
  "required": ["id","title","price","description","category","image"],
  "properties": {
    "id": {
      "type": "number"
    },
    "title": {
      "type": "string"
    },
    "price": {
      "type": ["number","integer"]
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "image": {
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": false
}
